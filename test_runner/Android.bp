java_genrule {
    name: "cronet-testing-jarjar-rules",
    tool_files: [
        ":cronet_aml_tester_app_prejarjar{.jar}",
        "jarjar-excludes.txt",
    ],
    tools: [
        "jarjar-rules-generator",
    ],
    out: ["cronet_testing_jarjar_rules.txt"],
    cmd: "$(location jarjar-rules-generator) " +
        "$(location :cronet_aml_tester_app_prejarjar{.jar}) " +
        "--prefix android.net.http.internal " +
        "--excludes $(location jarjar-excludes.txt) " +
        "--output $(out)",
}