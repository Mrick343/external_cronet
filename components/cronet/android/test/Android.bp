android_library {
    name: "NetHttpTestsLib",
    srcs: ["javatests/**/UrlResponseInfoTest.java"],
    static_libs: [
        "androidx.test.rules",
        "androidx.core_core",
        "junit",
    ],
    libs: [
        "android.test.runner",
        "android.test.base",
        "framework-tethering-pre-jarjar",
    ],
    jarjar_rules: "//packages/modules/Connectivity/Tethering/common/TetheringLib:framework-tethering-jarjar-rules",
    visibility: [
        "//packages/modules/Connectivity/Cronet/tests:__subpackages__",
     ]
}

android_test {
     name: "NetHttpTests",
     defaults: [
        "mts-target-sdk-version-current",
     ],
     compile_multilib: "both",
     sdk_version: "test_current",
     static_libs: ["NetHttpTestsLib"],
     test_suites: [
         "general-tests",
         "mts-tethering",
     ],
}

